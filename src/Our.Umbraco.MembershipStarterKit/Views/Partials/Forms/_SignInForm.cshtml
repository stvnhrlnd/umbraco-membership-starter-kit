@model Our.Umbraco.MembershipStarterKit.Models.ViewModels.SignInViewModel
@using (Html.BeginUmbracoForm<Our.Umbraco.MembershipStarterKit.Controllers.SignInController>("SignIn", new { ReturnUrl = Request["returnUrl"] }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group row">
        @Html.LabelFor(model => model.Username, new { @class = "col-sm-3 col-form-label" })
        <div class="col-sm-9">
            @Html.TextBoxFor(model => model.Username, new { @class = "form-control", placeholder = "Username" })
            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "invalid-feedback" })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(model => model.Password, new { @class = "col-sm-3 col-form-label" })
        <div class="col-sm-9">
            @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "Password" })
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "invalid-feedback" })
            @if (!string.IsNullOrWhiteSpace(Model.ForgotPasswordUrl))
            {
                <a class="d-block font-weight-light mt-1" href="@Model.ForgotPasswordUrl">
                    Forgot password?
                </a>
            }
        </div>
    </div>
    <div class="text-center">
        <button type="submit" class="btn btn-primary">Sign In</button>
    </div>
}