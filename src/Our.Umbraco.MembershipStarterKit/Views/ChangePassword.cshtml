@using ClientDependency.Core.Mvc
@using Our.Umbraco.MembershipStarterKit.Models.ViewModels
@inherits UmbracoViewPage<ChangePassword>
@{
    Layout = "Master.cshtml";

    Html.EnableClientValidation();
    Html.EnableUnobtrusiveJavaScript();
    Html.RequiresJsBundle("ValidationScripts");
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <h1 class="display-4 my-4 text-center">Change Password</h1>
            @Html.Partial("Forms/_ChangePasswordForm", new ChangePasswordViewModel())
        </div>
    </div>
</div>