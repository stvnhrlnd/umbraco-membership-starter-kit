@inherits UmbracoViewPage<Profile>
@{
    Layout = "Master.cshtml";
}
@if (Members.IsLoggedIn())
{
    var profile = Members.GetCurrentMemberProfileModel();
    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="media">
                    @Html.GravatarImage(profile.Email, 100, cssClass: "img-thumbnail mr-3", defaultImage: GravatarHtmlHelper.DefaultImage.Identicon)
                    <div class="media-body">
                        <a class="btn btn-primary btn-sm float-right" href="#">Edit Profile</a>
                        <h4 class="mt-0">@profile.Name</h4>
                        <h5 class="font-weight-light">@profile.UserName</h5>
                        <p>Last login: @profile.LastLoginDate.ToString("dd/MM/yyyy @ HH:mm")</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    @Html.Partial("_Error")
}